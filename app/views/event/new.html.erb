<div class="text-center">
  <h2>Create a New Event</h2>
</div>
<br>

<div class="small-offset-4 columns">
  <div class="small-4">
  <%= simple_form_for (@event), method: "post", url: event_index_path do |f| %>
    <%= f.input :name, label: "Event Name (Optional):" %>
      <%= f.input :date, as: :datetime %>

    <%= f.button :submit %>
  <% end %>
  </div>
</div>
