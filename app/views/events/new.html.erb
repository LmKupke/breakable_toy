<div class="text-center">
  <h2>Create a New Event</h2>
</div>
<br>

<div class="small-offset-4 columns">
  <div class="small-4">
  <%= simple_form_for (@event), method: "post", url: events_path do |f| %>
    <%= f.input :name, label: "Event Name (Optional):" %>
    <%= f.input :date, as: "text", class: "span2", value: "#{DateTime.now}", id: "dpt" %>
    <script>
    $(function(){
      $('#dpt').fdatepicker({
    		format: 'mm-dd-yyyy hh:ii',
    		disableDblClickSelection: true,
    		language: 'en',
    		pickTime: true
    	});
    });
    </script>
  

    <%= f.button :submit %>
  <% end %>
  </div>
</div>
